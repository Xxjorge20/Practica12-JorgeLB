<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="16dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="6dp"
    app:cardBackgroundColor="@color/cardview_dark_background">
    >


<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/ImagenFoto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/NombrePelicula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Titulo"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/ImagenFoto"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/NombreDirector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Director"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/ImagenFoto"
        app:layout_constraintTop_toBottomOf="@+id/NombrePelicula" />

    <TextView
        android:id="@+id/AñoPelicula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Año"
        android:textColor="@color/white"
        android:layout_marginStart="160dp"
        app:layout_constraintStart_toEndOf="@+id/ImagenFoto"
        app:layout_constraintTop_toBottomOf="@+id/NombreDirector" />
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>